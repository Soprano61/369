<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="eggTimerViewModel"
            type="com.example.android.nexi.ui.EggTimerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.EggTimerFragment">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:visibility="gone"
            app:elapsedTime="@{eggTimerViewModel.elapsedTime}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/minutes_spinner" />

        <Spinner
            android:id="@+id/minutes_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:entries="@array/egg_array"
            android:onItemSelected="@{(parent, view, selection, id)-> eggTimerViewModel.setTimeSelected(selection)}"
            android:prompt="@string/egg_prompt"
            android:selectedItemPosition="@{eggTimerViewModel.timeSelection}"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/on_off_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/on_off_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:checked="@{eggTimerViewModel.isAlarmOn}"
            android:onCheckedChanged="@{(button, on)-> eggTimerViewModel.setAlarm(on)}"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/minutes_spinner"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ciAvatar"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ciAvatar2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectPhoto2" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/selectPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="@id/ciAvatar"
            app:layout_constraintEnd_toEndOf="@id/ciAvatar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/selectPhoto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="@+id/ciAvatar2"
            app:layout_constraintEnd_toEndOf="@+id/ciAvatar2" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/selectPhoto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@android:drawable/ic_menu_upload"
            app:backgroundTint="@color/common_google_signin_btn_text_light_default"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="@+id/ciAvatar"
            app:layout_constraintStart_toStartOf="@+id/ciAvatar"
            app:layout_constraintTop_toBottomOf="@+id/ciAvatar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/selectPhoto4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@android:drawable/ic_menu_upload"
            app:backgroundTint="@color/common_google_signin_btn_text_light_default"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="@+id/ciAvatar2"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/ciAvatar2"
            app:layout_constraintTop_toBottomOf="@+id/ciAvatar2" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@android:color/holo_orange_dark"
            android:text=" Завершить и отправить данные"
            app:layout_constraintEnd_toEndOf="@+id/selectPhoto4"
            app:layout_constraintStart_toStartOf="@+id/selectPhoto4"
            app:layout_constraintTop_toBottomOf="@+id/selectPhoto4" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>